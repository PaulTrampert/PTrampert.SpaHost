{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      "Console"
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "RedisConfig": {
    "UseForDataProtection": true,
    "DataProtectionConnectionString": "redis:6379"
  },
  "AuthConfig": {
    "RequireForStaticFiles": false,
    "CookieConfig": {
      "ExpireTimeSpan": "01:00:00",
      "SlidingExpiration": true
    },
    "OidcConfig": {
      "Authority": "http://auth:8080/realms/localdev",
      "ClientId": "SpaHostTest",
      "ClientSecret": "Asdfasdf1",
      "Scopes": [
        "openid",
        "profile",
        "email",
        "offline_access"
      ]
    }
  },
  "ApiProxy": {
    "sample": {
      "BaseUrl": "http://ptrampert.spahost.sampleapi/",
      "AuthType": "PTrampert.ApiProxy.Authentication.UserBearerAuthentication",
      "AuthProps": {
        "Mode": "AuthProps",
        "TokenKey": "access_token"
      }
    }
  }
}
